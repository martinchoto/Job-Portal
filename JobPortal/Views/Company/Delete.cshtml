@using JobPortal.ViewModels.Company
@model DeleteViewModel
@{
	ViewBag.Title = "Delete Job Offer";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row justify-content-center">
	<div class="col-md-6">
		<div class="card">
			<div class="card-body">
				<h3 class="card-title text-center">Position: @Model.Position</h3>
				<h4 class="card-title text-center">Last Updated On: @Model.LastUpdated</h4>
				<h4 class="card-title text-center">Salary: @Model.Salary leva</h4>
				<p class="text-danger mt-3">Are you sure you want to delete this job offer?</p>
			</div>
			<div class="card-footer">
				<form asp-action="ConfirmDelete">
					<input type="hidden" asp-for="@Model.Id" />
					<button type="submit" class="btn btn-danger">Confirm Delete</button>
					<a asp-action="All" class="btn btn-secondary">Cancel</a>
				</form>
			</div>
		</div>
	</div>
</div>
